<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/edtPatientName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:hint="Tên bệnh nhân"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/edtDoctorName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:hint="Tên bác sĩ"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/edtSpecialty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:hint="Chuyên khoa"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/edtAppointmentTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:hint="Thời gian hẹn"/>

</LinearLayout>
