<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Tiêu đề -->
        <TextView
            android:id="@+id/tvTitleRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng ký lịch hẹn"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp" />

        <!-- Tên bệnh nhân -->
        <EditText
            android:id="@+id/edtPatientName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:padding="12dp"
            android:hint="Tên bệnh nhân"
            android:inputType="textPersonName"
            android:layout_marginBottom="15dp"/>

        <!-- Ngày hẹn -->
        <EditText
            android:id="@+id/edtAppointmentDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:padding="12dp"
            android:hint="Ngày hẹn (VD: 2025-04-20)"
            android:inputType="date"
            android:layout_marginBottom="15dp"/>

        <!-- Spinner chọn chuyên khoa -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chuyên khoa"
            android:layout_gravity="start"
            android:layout_marginBottom="5dp"
            android:textSize="16sp" />
        <Spinner
            android:id="@+id/spinnerSpecialties"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_marginBottom="15dp"/>

        <!-- Spinner chọn bác sĩ -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chọn bác sĩ"
            android:layout_gravity="start"
            android:layout_marginBottom="5dp"
            android:textSize="16sp" />
        <Spinner
            android:id="@+id/spinnerDoctors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_marginBottom="20dp"/>

        <!-- Button Đăng ký lịch hẹn -->
        <Button
            android:id="@+id/btnRegisterAppointment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đăng ký lịch hẹn"
            android:minHeight="48dp"
            android:padding="12dp"
            android:layout_marginBottom="15dp"/>

        <!-- Button Quay lại -->
        <Button
            android:id="@+id/btnBackAppointment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quay lại"
            android:minHeight="48dp"
            android:padding="12dp"/>

    </LinearLayout>

</ScrollView>
